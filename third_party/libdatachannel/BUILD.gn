action("build_libdatachannel") {
  output_dir = "$target_gen_dir/repo/build-$current_cpu"
  script = "scripts/build_libdatachannel.py"
  outputs = [ "$output_dir/libdatachannel.so" ]
  args = [
    "--target_cpu_type=$current_cpu",
    "--host_cpu_type=$host_cpu",
    "--host_os_type=$host_os"
  ]
}

config("datachannel_config") {
  libs = [
    "datachannel",
    "usrsctp",
    "srtp2",
    "juice",
  ]

  output_dir = "repo/build-$current_cpu"

  lib_dirs = [
    rebase_path("$output_dir"),
    rebase_path("$output_dir/deps/usrsctp/usrsctplib"),
    rebase_path("$output_dir/deps/libsrtp"),
    rebase_path("$output_dir/deps/libjuice"),
  ]
}

static_library("libdatachannel") {
  deps = [ ":build_libdatachannel" ]
  public_configs = [ ":datachannel_config" ]
}
